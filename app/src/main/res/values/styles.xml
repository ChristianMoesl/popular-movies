<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailHeadlineStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/detail_headline_padding</item>
        <item name="android:paddingBottom">@dimen/detail_headline_padding</item>
        <item name="android:textSize">@dimen/detail_headline_text_size</item>
    </style>

    <style name="DetailTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/detail_text_padding</item>
        <item name="android:paddingBottom">@dimen/detail_text_padding</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
    </style>

</resources>
